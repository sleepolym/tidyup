{
  "name": "tidyup",
  "version": "1.0.0",
  "description": "AI-powered file organizer. Open source. Your files never leave your machine.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["file-organizer", "ai", "desktop", "electron"],
  "author": "sleepolym",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0"
  },
  "build": {
    "appId": "com.sleepolym.tidyup",
    "productName": "TidyUp",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
